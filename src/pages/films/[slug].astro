---
import films from "../../data/films.json";
import Layout from "../../layouts/Layout.astro";

export function getStaticPaths() {
  return films.map((film) => ({
    params: {
      slug: film.slug,
    },
  }));
}

const { slug } = Astro.params;
const [{ title, year, img, link }] = films.filter((film) => film.slug === slug);
---

<Layout title="">
  <section>
    <h1>{title}<span> {year}</span></h1>
    <div class="video-container">
      <div style="padding:56.25% 0 0 0;position:relative;">
        <iframe
          src="https://player.vimeo.com/video/569923051?h=b3dd2dca2d&title=0&byline=0&portrait=0"
          style="position:absolute;top:0;left:0;width:100%;height:100%;"
          frameborder="0"
          allow="autoplay; fullscreen; picture-in-picture"
          allowfullscreen></iframe>
      </div>
    </div>
  </section>
</Layout>

<style>
  section {
    padding-top: clamp(8vh, 16vh, 100px);
    padding-bottom: 0;
    height: 100dvh;
    max-height: 100dvh;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
  }
  h1 {
    font-family: var(--humane);
    text-transform: uppercase;
    font-size: clamp(10vw, 26vw, 120px);
    line-height: 0.8;
  }

  span {
    opacity: 0.4;
  }

  .video-container {
    margin: 1rem 0 1rem;
    width: clamp(10vw, 100%, 900px);
  }
</style>
<script src="https://player.vimeo.com/api/player.js"></script>
