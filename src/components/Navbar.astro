<style>
  header {
    --offset-x: 1rem;

    --gap: 6px;

    position: fixed;
    top: 0.8rem;
    background: rgba(0, 0, 0, 0.5);
    color: var(--mint);
    border-radius: 6px;
    width: calc(100% - (var(--offset-x) * 2));
    left: var(--offset-x);
    padding: 6px;
    z-index: 50;
    transition: all 0.6s ease-in-out;
    display: flex;
    flex-direction: column;
    gap: var(--gap);
    clip-path: polygon(0 0, 100% 0, 100% 100%, 0% 100%);
    height: 35vh;
  }

  header.collapsed {
    height: 66px;
  }

  .back {
    font-family: var(--sans);
    font-size: 0.85rem;
    font-weight: 500;
    letter-spacing: var(--tracking-tight);
    padding: 0.6rem 0.4rem 0.6rem 0;
    display: flex;
    align-items: center;
  }

  .back svg {
    width: 1rem;
    margin-right: 0.2rem;
  }

  .top {
    width: 100%;
    background: var(--black);
    min-height: 54px;
    display: flex;
    border-radius: 3px;
    justify-content: space-between;
    align-items: center;
    padding: 0 10px;
    background: var(--black);
  }

  button {
    all: unset;
    line-height: 0;
    height: 100%;
    padding: 1rem;
    position: relative;
  }

  button svg {
    width: 1.4rem;
    position: absolute;
    top: 50%;
    right: 0;
    transform: translateY(-50%);
  }

  a {
    text-decoration: none;
    text-transform: uppercase;
    font-family: var(--humane);
    color: var(--mint);
    letter-spacing: 0.04rem;
    font-size: 1.5rem;
  }

  .bottom {
    /* background: var(--black); */
    width: 100%;
    flex-grow: 1;
    border-radius: 3px;
    display: flex;
    flex-direction: column;
    gap: var(--gap);
  }

  .mobile-nav-links {
    list-style: none;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--gap);
  }

  .mobile-nav-links li {
    background-color: var(--black);
    border-radius: 3px;
    padding: 1rem 0;
    display: grid;
    place-items: center;
  }

  .mobile-nav-links li a {
    font-family: var(--sans);
    letter-spacing: var(--tracking-tight);
    font-size: 0.8rem;
    font-weight: 400;
    opacity: 0.8;
  }

  .socials {
    flex-grow: 1;
    display: flex;
    justify-content: space-between;
    gap: var(--gap);
  }

  .socials li {
    list-style: none;
    background: var(--black);
    width: 100%;
    border-radius: 3px;
    display: grid;
    place-items: center;
  }

  .socials li a {
    opacity: 0.8;
  }

  svg {
    transition: all 0.3s ease-in-out;
  }

  .open {
    transform: translateY(-40px);
    opacity: 0;
  }

  header.collapsed .close {
    transform: translateY(40px);
    opacity: 0;
  }
  header.collapsed .open {
    transform: translateY(-50%);
    opacity: 1;
  }
</style>

<script>
  const header = document.querySelector("header");
  const hamburger = document.querySelector(".hamburger");

  hamburger.addEventListener("click", () => {
    header.classList.toggle("collapsed");
  });
</script>
