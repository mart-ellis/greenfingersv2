---
import { Image, Picture } from "@astrojs/image/components";
import Modal from "./Modal";

const { name, picture, bio } = Astro.props.person;
---

<div class="grid-item">
  <div class="grid-item-inner">
    <Modal name={name} picture={picture} bio={bio} client:load>
      <Image
        src={picture}
        alt={`Profile picture of ${name} from Greenfingers Films`}
        format="webp"
        width={390}
        height={425}
      />
    </Modal>
  </div>
  <h3>
    {name}
  </h3>
  <p>{bio}</p>
</div>

<style>
  .grid-item {
    width: 100%;
    aspect-ratio: 1 / 1;
    opacity: 1;
  }

  img {
    /* border-radius: 0.05rem; */
  }

  h3 {
    display: none;
    margin-top: 1rem;
    margin-left: 2rem;
    font-size: 1.2rem;
    font-weight: 400;
    opacity: 0.8;
    letter-spacing: var(--tracking-tight);
    color: var(--mint);
  }

  p {
    display: none;
    font-size: 0.8rem;
    line-height: 1.4;
    text-align: justify;
  }

  @media (min-width: 1024px) {
    h3 {
      display: initial;
    }

    img {
      border-radius: 0.6rem;
    }

    .grid-item-inner {
      position: relative;
      isolation: isolate;
    }

    .grid-item-inner::after {
      content: "";
      display: block;
      position: absolute;
      width: 100%;
      height: 98.5%;
      top: 20px;
      left: 20px;
      background-color: var(--dark-green);
      filter: brightness(70%);
      z-index: -10;
      border-radius: 0.6rem;
    }
  }
</style>

<script>
  import { gsap } from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";

  gsap.registerPlugin(ScrollTrigger);

  gsap.from(".grid-item", {
    opacity: 0,
    y: 100,
    stagger: 0.1,
    scrollTrigger: {
      trigger: ".grid-item",
      start: "top 80%",
      toggleActions: "play none none reset",
    },
  });
</script>
