---
import { Image, Picture } from "@astrojs/image/components";
const nums = Astro.props.nums;
---

<div>
  {
    nums.map((num) => (
      <Image
        src={`/images/awards/${num}.png`}
        alt="Greenfingers film award"
        format="webp"
        width={1735}
        height={1152}
      />
    ))
  }
</div>

<style>
  div {
    margin-top: 8rem;
    display: flex;
    width: 100%;
    gap: 8vw;
    align-items: center;
    justify-content: center;
  }

  img {
    width: 14vw;
    opacity: 0.2;
    max-width: 100px;
  }
</style>
