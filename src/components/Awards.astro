---
import { Image, Picture } from "@astrojs/image/components";
const nums = Astro.props.nums;
const images = import.meta.glob(
  "/src/assets/images/awards/*.{jpeg,jpg,png,gif}"
);
---

<div>
  {
    nums.map((num) => (
      <Image
        src={images[`/src/assets/images/awards/${num}.png`]()}
        alt="Greenfingers film award"
      />
    ))
  }
</div>

<style>
  div {
    margin-top: 8rem;
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    gap: 4rem 0;
    width: 100%;
    max-width: 100%;
    place-items: center;
  }

  img {
    width: 15vw;
    opacity: 0.4;
    max-width: 100px;
  }

  @media (min-width: 768px) {
    div {
      margin-left: auto;
      margin-right: auto;
      max-width: 60%;
    }
  }
</style>
