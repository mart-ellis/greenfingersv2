---
import Awards from "../components/Awards.astro";
import FilmPreview from "../components/FilmPreview.astro";
import Title from "../components/Title.astro";
import films from "../data/films.json";
---

<section id="films">
  <Title>Our Recent Films</Title>
  <div>
    {films.map((film, index) => <FilmPreview film={film} index={index} />)}
  </div>
  <Awards nums={[1, 2, 3]} />
</section>

<style>
  div {
    display: grid;
    grid-template-columns: 1fr;
    gap: 4rem;
    margin-top: 1rem;
  }

  p {
    margin-top: 3rem;
    text-align: center;
    font-size: 0.9rem;
    letter-spacing: var(--tracking-tighter);
    opacity: 0.4;
  }

  @media (min-width: 640px) {
    div {
      grid-template-columns: 1fr 1fr;
    }
  }

  @media (min-width: 1024px) {
    div {
      gap: 1rem;
      grid-template-columns: 1fr 1fr 1fr;
    }
  }

  @media (min-width: 1280px) {
    div {
      gap: 2rem;
    }
  }
</style>

<script>
  import { gsap } from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";

  gsap.registerPlugin(ScrollTrigger);

  const cards = document.querySelectorAll(".film-preview-container");
  cards.forEach((card) => {
    const cardWidth = card.offsetWidth;
    const distanceToEdge = card.getBoundingClientRect().left;
    const rotate = gsap.utils.random(-9, 9);

    gsap.from(card, {
      x: -(distanceToEdge + cardWidth),
      rotate: rotate,
      scrollTrigger: {
        trigger: card,
        start: "top bottom",
        end: "center center",
        scrub: 1,
      },
    });
  });
</script>
