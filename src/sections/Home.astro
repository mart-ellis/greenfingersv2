---
/* scroll issue is chrome only */
---

<section>
  <div class="video-wrapper">
    <video playsinline autoplay muted loop poster="/images/video-load.png">
      <source src="/videos/neigh.mp4" type="video/mp4" />
    </video>
    <div class="fader"></div>
  </div>
  <div class="title">
    <img
      class="mobile-only"
      alt="Greenfingers logo"
      src="greenfingers-mob.svg"
    />
    <img class="desktop-only" alt="Greenfingers logo" src="greenfingers.svg" />
    <p>Your friendly <span>award-winning</span> film collective.</p>
  </div>
</section>

<style>
  section {
    min-height: 100vh;
    height: 100vh;
    background: var(--dark-green);
    display: flex;
    padding: 35% var(--section-padding);
    position: relative;
  }

  .video-wrapper {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }

  video {
    width: 100%;
    height: 100%;
    object-fit: cover;
    filter: brightness(60%);
    position: relative;
    isolation: isolate;
  }

  .fader {
    width: 100%;
    height: 20vh;
    background: var(--dark-green);
    background: linear-gradient(
      180deg,
      rgba(31, 55, 39, 0) 0%,
      rgba(31, 55, 39, 0.5746892507002801) 39%,
      rgba(31, 55, 39, 0.9472382703081232) 79%,
      rgba(31, 55, 39, 1) 100%
    );
    position: absolute;
    bottom: 0;
  }

  .title {
    z-index: 10;
  }

  .title img {
    width: 80vw;
  }

  p {
    text-transform: uppercase;
    font-weight: 300;
    font-size: 0.8rem;
    letter-spacing: var(--tracking-tight);
  }

  span {
    font-weight: 600;
  }

  @media (min-width: 640px) {
    section {
      padding: 20% var(--section-padding);
    }

    .title img {
      width: 65vw;
    }

    h1 {
      font-size: 36vw;
    }

    br {
      display: none;
    }
  }

  @media (min-width: 768px) {
    section {
      min-height: 115dvh;
      height: 115dvh;
      padding: 25% var(--section-padding);
    }

    .title img {
      width: 90vw;
    }
  }

  @media (min-width: 1280px) {
    section {
      padding: 10% var(--section-padding);
    }
  }
</style>
