  <style>
    section {
      text-align: center;
      height: var(--contact-height);
      padding-top: 100px;
      background-color: white;
      color: var(--dark-green);
      position: fixed;
      bottom: 0;
      left: 0;
      width: 100%;
      z-index: -10;
      display: flex;
      flex-direction: column;
      align-items: center;
    }

    h3 {
      font-family: var(--humane);
      font-size: clamp(10vw, 28vw, 200px);
      letter-spacing: -0.1rem;
      text-transform: uppercase;
      text-align: center;
      line-height: 0.8;
    }

    p {
      font-weight: 500;
      font-size: 1rem;
      /* text-transform: uppercase; */
      opacity: 0.9;
    }

    .email-container {
      margin-top: 4rem;
      position: relative;
    }

    .arrow-left {
      width: 4rem;
      position: absolute;
      left: -8px;
      top: 4px;
      transform: translateX(-100%);
    }

    .arrow-right {
      width: 4rem;
      position: absolute;
      top: -2px;
      right: -10px;
      transform: translateX(100%);
    }

    .underline {
      width: 100%;
      position: absolute;
      left: 0;
      bottom: -0.2rem;
    }

    .email {
      font-family: "Caveat", cursive;
      text-decoration: none;
      font-size: 1.7rem;
      letter-spacing: var(--tracking-tight);
    }

    .copy-button-container {
      margin-top: 2rem;
    }

    .copy-button {
      all: unset;
      font-family: "Caveat", cursive;
      position: relative;
      cursor: pointer;
      transition: scale 0.4s ease-in-out;
      isolation: isolate;
    }

    .copy-button:hover {
      scale: 1.1;
    }
    .copy-button:active {
      scale: 0.9;
    }

    .copy-button p {
      font-size: 1.2rem;
      z-index: 50;
      position: relative;
    }

    .copy-button svg {
      position: absolute;
      top: 50%;
      left: 50%;
      width: 7.4rem;
      transform: translate(-50%, -50%);
    }

    footer {
      width: 100%;
      position: absolute;
      bottom: 0;
      padding: 0 var(--section-padding) 0.6rem;
    }

    footer div {
      display: flex;
      justify-content: space-between;
      align-items: center;
      opacity: 0.6;
    }

    footer p {
      font-size: 0.6rem;
    }

    footer button {
      all: unset;
      font-size: 0.7rem;
      display: flex;
      align-items: center;
    }

    footer button svg {
      width: 1rem;
      margin-left: 0.2rem;
    }

    .to-top {
      display: flex;
    }

    .to-top p {
      font-size: 0.6rem;
    }
  </style>

  <script>
    const toTop = document.querySelector(".to-top");
    toTop.addEventListener("click", () => {
      window.scrollTo({
        top: 0,
        behavior: "smooth",
      });
    });

    import JSConfetti from "js-confetti";

    const jsConfetti = new JSConfetti();

    const copyButton = document.querySelector(".copy-button");
    const copyText = document.querySelector(".copy-text");
    const emailText = document.querySelector(".email");

    function copyEmail() {
      navigator.clipboard.writeText("greenfingersfilms@gmail.com");
      copyText.textContent = "copied!";
      jsConfetti.addConfetti({
        emojis: ["💌", "✉️"],
        confettiRadius: 4,
        confettiNumber: 70,
      });
      setTimeout(() => {
        copyText.textContent = "click to copy";
      }, 5000);
    }

    copyButton.addEventListener("click", copyEmail);
    emailText.addEventListener("click", copyEmail);
  </script>
</section>
