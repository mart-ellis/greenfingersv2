---
import Socials from "../components/Socials.astro";
---

<section id="contact">
  <h3>Get in touch</h3>
  <div class="socials_container">
    <h4>Socials</h4>
    <ul>
      <li>
        <a href="https://www.instagram.com/greenfingers_film/" target="_blank"
          >Instagram</a
        >
        <li>
          <a href="https://vimeo.com/user2817712" target="_blank">Vimeo</a>
        </li>
        <li>
          <a
            href="https://www.youtube.com/@greenfingersfilms5979"
            target="_blank">Youtube</a
          >
        </li>
        <li>
          <a
            href="https://www.tiktok.com/@greenfingersfilm?ug_source=op.auth&ug_term=Linktr.ee&utm_source=awyc6vc625ejxp86&utm_campaign=tt4d_profile_link&_r=1"
            target="_blank">Tiktok</a
          >
        </li>
      </li>
    </ul>

    <footer>
      <div>
        <p>Greenfingers Films {new Date().getFullYear()}</p>
        <button aria-label="Return to top of page" type="button" class="to-top"
          ><p>Back to Top</p>
          <svg
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 24 24"
            width="24"
            height="24"
            ><path fill="none" d="M0 0h24v24H0z"></path><path
              d="M12 10.828l-4.95 4.95-1.414-1.414L12 8l6.364 6.364-1.414 1.414z"
            ></path></svg
          >
        </button>
      </div>
    </footer>

    <style>
      section {
        text-align: center;
        height: var(--contact-height);
        padding-top: 100px;
        background-color: var(--mint);
        color: var(--dark-green);
        position: fixed;
        bottom: 0;
        left: 0;
        width: 100%;
        z-index: -10;
        display: flex;
        flex-direction: column;
        align-items: start;
      }

      h3 {
        font-family: var(--humane);
        font-size: clamp(10vw, 30vw, 380px);
        letter-spacing: -0.05rem;
        text-transform: uppercase;
        text-align: center;
        line-height: 0.8;
      }

      p {
        font-weight: 500;
        font-size: 1rem;
        /* text-transform: uppercase; */
        opacity: 0.9;
      }

      .socials_container {
        margin-top: 1rem;
        display: flex;
        flex-direction: column;
        align-items: start;
      }

      .socials_container h4 {
        font-family: var(--humane);
        text-transform: uppercase;
        font-weight: 400;
        opacity: 60%;
        font-size: 1.4rem;
      }

      .socials_container ul {
        list-style: none;
        display: flex;
        flex-direction: column;
        align-items: start;
      }

      .socials_container ul li {
        font-family: var(--humane);
        text-transform: uppercase;
        font-size: 3rem;
        opacity: 0.9;
      }

      footer {
        width: 100%;
        position: absolute;
        bottom: 0;
        padding: 0 var(--section-padding) 0.6rem;
      }

      footer div {
        display: flex;
        justify-content: space-between;
        align-items: center;
        opacity: 0.6;
      }

      footer p {
        font-size: 0.6rem;
      }

      footer button {
        all: unset;
        font-size: 0.7rem;
        display: flex;
        align-items: center;
      }

      footer button svg {
        width: 1rem;
        margin-left: 0.2rem;
      }

      .to-top {
        display: flex;
      }

      .to-top p {
        font-size: 0.6rem;
      }
    </style>

    <script>
      const toTop = document.querySelector(".to-top");
      toTop.addEventListener("click", () => {
        window.scrollTo({
          top: 0,
          behavior: "smooth",
        });
      });

      import JSConfetti from "js-confetti";

      const jsConfetti = new JSConfetti();

      const copyButton = document.querySelector(".copy-button");
      const copyText = document.querySelector(".copy-text");
      const emailText = document.querySelector(".email");

      function copyEmail() {
        navigator.clipboard.writeText("greenfingersfilms@gmail.com");
        copyText.textContent = "copied!";
        jsConfetti.addConfetti({
          emojis: ["💌", "✉️"],
          confettiRadius: 4,
          confettiNumber: 70,
        });
        setTimeout(() => {
          copyText.textContent = "click to copy";
        }, 5000);
      }

      copyButton.addEventListener("click", copyEmail);
      emailText.addEventListener("click", copyEmail);
    </script>
  </div>
</section>
